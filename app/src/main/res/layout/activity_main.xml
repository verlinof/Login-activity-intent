<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:layout_centerHorizontal="true"
    >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        >

        <TextView
            android:id="@+id/tvRegister"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Register"
            android:textColor="@color/black"
            android:textSize="24dp"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="35dp"
            android:fontFamily="@font/poppinsbold"
            />

        <EditText
            android:id="@+id/etUsername"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/tvRegister"
            android:layout_marginHorizontal="31dp"
            android:layout_marginVertical="10dp"
            android:paddingStart="24dp"
            android:paddingVertical="8dp"
            android:fontFamily="@font/poppinsregular"
            android:background="@drawable/gray_edittext_background"
            android:hint="Username"
            />

        <EditText
            android:id="@+id/etEmail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/etUsername"
            android:layout_marginHorizontal="31dp"
            android:layout_marginVertical="10dp"
            android:paddingStart="24dp"
            android:paddingVertical="8dp"
            android:fontFamily="@font/poppinsregular"
            android:background="@drawable/gray_edittext_background"
            android:hint="Email"
            />

        <EditText
            android:id="@+id/etPhone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/etEmail"
            android:layout_marginHorizontal="31dp"
            android:layout_marginVertical="10dp"
            android:paddingStart="24dp"
            android:paddingVertical="8dp"
            android:fontFamily="@font/poppinsregular"
            android:background="@drawable/gray_edittext_background"
            android:inputType="number"
            android:hint="Phone"
            />

        <EditText
            android:id="@+id/etPassword"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/etPhone"
            android:layout_marginHorizontal="31dp"
            android:layout_marginVertical="10dp"
            android:paddingStart="24dp"
            android:paddingVertical="8dp"
            android:fontFamily="@font/poppinsregular"
            android:background="@drawable/gray_edittext_background"
            android:hint="Password"
            android:inputType="textPassword"
            />

        <CheckBox
            android:id="@+id/cbAgreement"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="28dp"
            android:layout_below="@id/etPassword"
            />

        <TextView
            android:id="@+id/tvChecbox"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@id/cbAgreement"
            android:paddingEnd="31dp"
            android:textSize="11dp"
            android:text="By checking the box you agree to our Terms and Conditions."
            android:layout_alignBaseline="@id/cbAgreement"
            />

        <Button
            android:id="@+id/btnRegister"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Register"
            android:layout_marginHorizontal="31dp"
            android:layout_marginTop="20dp"
            android:backgroundTint="@color/btnColor"
            android:layout_below="@id/cbAgreement"
            />

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/btnRegister"
            android:layout_marginVertical="15dp"
            android:layout_marginHorizontal="31dp"
            android:layout_centerHorizontal="true"
            >

            <TextView
                android:id="@+id/tvAlreadyHave"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Already Have an Account? "
                />

            <TextView
                android:id="@+id/btnLogin"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Login"
                android:textColor="@color/btnColor"
                android:layout_toEndOf="@id/tvAlreadyHave"
                android:clickable="true"
                />

        </RelativeLayout>

    </RelativeLayout>



</RelativeLayout>